@model IEnumerable<ExamAspNet.Models.Application>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>
@if (ViewBag.Msg != "" && ViewBag.Msg != null)
{
    <h4 style="background-color:red; color:white; font-weight:bold; text-align:center; padding:2px">@ViewBag.Msg</h4>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PracticeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PracticeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeName)
            </td>
            <td>
                @Html.ActionLink("Accept", "Accept", new { id = item.Id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Reject", "Reject", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
