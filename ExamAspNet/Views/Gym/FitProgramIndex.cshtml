@model IEnumerable<ExamAspNet.Models.FitProgram>

@{
    ViewBag.Title = "FitProgramIndex";
}


@if (ViewBag.Msg != "")
{
    <h4 style="background-color:red; color:white; font-weight:bold; text-align:center; padding:2px">@ViewBag.Msg</h4>
}
<h2>Our FitPrograms</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Details", "FitProgramDetails", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Join FitProgram", "FitProgramJoin", new { id = item.Id }, new { @class = "btn btn-success" })


            </td>
        </tr>
    }
</table>
<div>@Html.ActionLink("To see our Coaches", "CoachIndex", new { }, new { @class = "btn btn-default" })
@Html.ActionLink("Main Page", "Index", new {UserId = Session["id"] }, new { @class = "btn btn-default" })</div>
